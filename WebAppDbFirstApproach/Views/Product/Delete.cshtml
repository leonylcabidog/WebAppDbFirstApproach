@model Product
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<div class="billing-details">
					<form asp-action="Delete" method="post">
						<div class="section-title">
							<h3 class="title">Delete Product</h3>
							<input asp-for="ProductId" class="input" hidden />
							<div class="form-group">
								<input class="input" asp-for="ProductName" placeholder="Name" readonly />
								<span asp-validation-for="ProductName" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input class="input" asp-for="Description" placeholder="Description" readonly />
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
							<button type="submit" class="primary-btn order-submit">Delete</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>