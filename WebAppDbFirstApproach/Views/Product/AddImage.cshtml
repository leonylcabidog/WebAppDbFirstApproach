@model ProductImg
<div class="section">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<div class="billing-details">
					<form asp-action="AddImage" method="post">
						<div class="section-title">
							<h3 class="title">Add Product Image</h3>
							<input asp-for="ProductId" value="@ViewData["ProductId"]" hidden />
							<div class="form-group">
								<input class="input" asp-for="ImgPath" placeholder="Image Path" />
								<span asp-validation-for="ImgPath" class="text-danger"></span>
							</div>
							<div class="form-group">
								<input class="input" asp-for="ImgDescription" placeholder="Description" />
								<span asp-validation-for="ImgDescription" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label>
									Is Primary Image?
									<select class="input-select" asp-for="IsPrimary">
										<option value=1 selected>Yes</option>
										<option value=0>No</option>
									</select>
								</label>
							</div>


							<button type="submit" class="primary-btn order-submit">Save</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>